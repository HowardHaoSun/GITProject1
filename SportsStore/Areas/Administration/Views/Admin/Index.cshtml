@model IEnumerable<SportsStore.Domain.Entities.Product>

@{
    ViewBag.Title = "Admin: All Products";
}
<script>
    $(document).ready(function () {
        //图片显示插件
        $.hideNotice();
    });
</script>
<div data-ng-app="sportsstore" class="panel panel-default">
    <div class="panel-heading">
        <h3>All Products</h3>
    </div>
    <div class="panel-body" ng-controller="ListController">
        {{message}}
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Products</th>
                <th>Price</th>
                <th>Actions</th>

            </tr>

            <tr ng-repeat="product in products">
                <td class="text-right">{{product.ProductID}}</td>
                <td>
                    <a href="Admin/Edit/?ProductID={{product.ProductID}}">{{product.Name}}</a>
                </td>
                <td class="text-right">{{product.Price}}</td>
                <td class="text-center">
                    <button class="btn btn-danger" ng-click="delete(product)" data-placement="top-right" data-container="body" data-duration="3" bs-alert="alert">Delete</button>
                </td>
            </tr>
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new Product", "Create", null, new { @class = "btn btn-primary", @style = "margin-left: 45%;" })
    </div>
</div>